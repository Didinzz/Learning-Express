<% layout('layouts/app') %>
  <link rel="stylesheet" href="/css/stars.css">

  <div class="row mb-3">
    <div class="<%= currentUser ? 'col-6' : 'col-8 mx-auto'%>">
      <div class="card">
        <div id="carouselExample" class="carousel slide">
          <div class="carousel-inner">
            <% if (places.images.length) { %>
            <% places.images.forEach((image, index)=> { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="/image/<%= image.filename %>" class="d-block w-100" alt="<%= places.title %>">
              </div>
              <% })%>
            <% }else{ %>
               <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="https://picsum.photos/1280/720?nature" class="d-block w-100" alt="<%= places.title %>">
              </div>
              <% } %>
          </div>
          <% if(places.images.length> 1) { %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= places.title %>
          </h5>
          <p class="card-text">
            <%= places.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= places.location %>
          </li>
          <li class="list-group-item">
            Author: <%= places.author.username %>
          </li>
          <% if(places.price===0) { %>
            <li class="list-group-item">Gratis</li>
            <% } else { %>
              <li class="list-group-item">Rp. <%= places.price %>
              </li>
              <% } %>
        </ul>
        <% if(currentUser && places.author.equals(currentUser._id)) { %>
          <div class="card-body">
            <a href="/places/edit/<%= places._id %>" class="btn btn-warning text-white card-link">Edit</a>
            <form action="/places/delete/<%= places._id %>?_method=DELETE" method="post"
              style="display: inline !important">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
          <% } %>
      </div>
    </div>

    <div class="col-6">
      <div class="mb-3" style="width: 640px; height: 480px" id="mapContainer"></div>
      <% if(currentUser) { %>
        <h3>Leave A Review</h3>
        <form action="/places/<%= places._id %>/reviews" method="post" class="validate-form" novalidate>
          <div class="mb-3">
            <label for="" class="form-label">Rating</label>
            <fieldset class="starability-coinFlip">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Review</label>
            <textarea name="review[body]" class="form-control" id="" cols="30" rows="5" required></textarea>

            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <button type="submit" class="btn btn-success shadow mb-3">Submit</button>
        </form>


        <% for(const review of places.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h3>Rated element name</h3>
              <p class="starability-result" data-rating="<%= review.rating %>"></p>
              <p class="card-text">
                <%= review.body %>
              </p>
              <p class="card-text">
                Author: <%= review.author.username %>
              </p>
              <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                <form action="/places/<%= places._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                  <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
            </div>
          </div>
          <% } %>
            <% } %>
    </div>
  </div>
  <div id="place-data" data-place="<%= JSON.stringify(places) %>"></div>
  <script>
    const place = JSON.parse(document.getElementById("place-data").dataset.place);
    const placeLocation = { lng: place.geometry.coordinates[0], lat: place.geometry.coordinates[1] };
  </script>

